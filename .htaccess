# Rediriger toutes les requêtes vers le dossier public de Symfony
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} !^/docroot/public/
    RewriteRule ^(.*)$ /docroot/public/$1 [L]
</IfModule>

# Empêcher le listing des répertoires
Options -Indexes

# Protection des fichiers sensibles
<FilesMatch "^\.env|composer\.(json|lock)|symfony\.lock|.*\.md|.*\.dist|.*\.cache$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>