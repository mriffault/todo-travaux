{% extends 'base.html.twig' %}

{% block title %}Todo App{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Todo App</h1>
        
        <div class="add-task">
            <input type="text" id="task-input" placeholder="Ajouter une nouvelle tâche...">
            <button id="add-task-btn">Ajouter</button>
        </div>
        
        <div class="tasks-container">
            <ul id="tasks-list" class="tasks-list">
                <!-- Les tâches seront ajoutées dynamiquement ici -->
            </ul>
        </div>
    </div>

    <!-- Popin de confirmation -->
    <div id="confirmation-modal" class="modal">
        <div class="modal-content">
            <h3>Confirmation</h3>
            <p>Êtes-vous sûr de vouloir supprimer cette tâche ?</p>
            <div class="modal-actions">
                <button id="confirm-delete-btn" class="btn-danger">Supprimer</button>
                <button id="cancel-delete-btn" class="btn-secondary">Annuler</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/auth.js') }}"></script>
    <script src="{{ asset('js/api.js') }}"></script>
    <script src="{{ asset('js/tasks.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}